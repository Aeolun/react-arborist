{
  "name": "react-arborist-monorepo",
  "workspaces": [
    "./modules/*"
  ],
  "scripts": {
    "build": "yarn workspaces foreach --all run build",
    "build:lib": "yarn workspace react-arborist build",
    "test": "yarn workspaces foreach --all run test",
    "bump": "yarn workspace react-arborist version",
    "publish": "sh bin/publish",
    "dev:showcase": "yarn workspace showcase start",
    "dev:lib": "yarn workspace react-arborist watch",
    "dev": "run-p 'dev:*'"
  },
  "private": true,
  "packageManager": "yarn@4.0.2",
  "devDependencies": {
    "npm-run-all": "^4.1.5",
    "typescript": "^5.3.3"
  }
}
